<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
  <tr>
    <th>Product Name</th>
    <th>Product Count</th>
    <th>Actions</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product_name %></td>
        <td><%= order.product_count %></td>
        <td><%= link_to 'Show', order, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-primary" %></td>
        <td><%= button_to "Destroy", order, method: :delete, data: { turbo_confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>
</p>

<p>
    <%= link_to "Back to customers", customers_path, class: "btn btn-primary" %>
</p>