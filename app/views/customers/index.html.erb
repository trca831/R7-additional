
<h1> <%= icon('fa-solid', 'user') %> Customers </h1>
<table class="table table-striped">
  <thead style="text-align: center">
    <tr>
      <th>Full Name</th>
      <th>Number of Orders</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td> <%= icon('fa-solid', 'user') %> <%= customer.full_name %></td>
        <td style="text-align: center;"> <%= icon('fa-hashtag', 'user') %> <%= customer.orders.count %></td>
       
        <td>
            <div style="display: flex; justify-content: space-between;">
            <%= button_to "Show", customer, method: :get, class: "btn btn-primary" %>
           
            <%= button_to "Edit", edit_customer_path(customer), method: :get, class: "btn btn-primary" %>
           
            <%= button_to "Delete", customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Customer", new_customer_path, class: "btn btn-primary" %>
